<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_dash_month"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginEnd="1dp"
    android:background="@drawable/rounded_item_dash_month">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tv_title"
        style="@style/tv_title_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:text="@string/tv_title_item_example" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/tv_time_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="right|center_vertical"
        android:paddingEnd="20dp"
        android:text="@string/tv_time_item_example" />
</LinearLayout>